#editorconfig.org

root = true

[*]
indent_style             = space
indent_size              = 2
charset                  = utf-8
insert_final_newline     = true
trim_trailing_whitespace = true
max_line_length          = 80
spaces_around_operators  = true

[*.md]
trim_trailing_whitespace = false

# How to use

# Intall the plugin in your code editor here (http://editorconfig.org)

# You can configure the style for your language just puting the configuration
# above the brackets with your file type eg: [*.js] (Javascript), [*.rb] (Ruby)
